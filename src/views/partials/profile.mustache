<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Perfil - ProjWeb Movies</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #050814; color: #fff; }
    .page-wrapper { padding-top: 80px; padding-bottom: 40px; }
    .movie-card img { height: 220px; object-fit: cover; }
  </style>
</head>
<body>
  {{> navbar}}

  <div class="container-fluid page-wrapper px-4">
    <div class="mb-4">
      <h1 class="h3 mb-1">Bem-vindo, {{username}}</h1>
      <p class="text-secondary mb-0">Aqui encontras os teus favoritos e a tua watchlist.</p>
    </div>

    <ul class="nav nav-tabs mb-3" id="profileTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="favorites-tab" data-bs-toggle="tab"
                data-bs-target="#favorites" type="button" role="tab">
          Favoritos
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="watchlist-tab" data-bs-toggle="tab"
                data-bs-target="#watchlist" type="button" role="tab">
          Watchlist
        </button>
      </li>
    </ul>

    <div class="tab-content">
      <div class="tab-pane fade show active" id="favorites" role="tabpanel">
        <div class="row gy-3" id="favorites-row">
          <!-- favoritos via JS -->
        </div>
      </div>
      <div class="tab-pane fade" id="watchlist" role="tabpanel">
        <div class="row gy-3" id="watchlist-row">
          <!-- watchlist via JS -->
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // atualizar navbar com "Bem-vindo, nome" se veio do localStorage
    document.addEventListener('DOMContentLoaded', () => {
      const username = localStorage.getItem('username');
      if (username) {
        const slot = document.getElementById('nav-user-slot');
        if (slot) slot.innerHTML = `<a class="nav-link" href="/profile">Bem-vindo, ${username}</a>`;
        document.querySelectorAll('.nav-link-login, .nav-link-register')
          .forEach(el => el.classList.add('d-none'));
      }
    });

    const token = localStorage.getItem('token');

    function createMovieCard(movie) {
      const col = document.createElement('div');
      col.className = 'col-6 col-sm-4 col-md-3 col-lg-2';
      col.innerHTML = `
        <div class="card bg-dark text-white movie-card h-100">
          <img src="${movie.poster_path}" class="card-img-top" alt="${movie.title}">
          <div class="card-body p-2">
            <h6 class="card-title mb-1 text-truncate" title="${movie.title}">${movie.title}</h6>
            <small class="text-warning">â˜… ${movie.vote_average ?? 'N/A'}</small>
          </div>
        </div>
      `;
      return col;
    }

    async function loadList(endpoint, containerId) {
      try {
        const res = await fetch(endpoint, {
          headers: {
            'Content-Type': 'application/json',
            'Authorization': token ? 'Bearer ' + token : ''
          }
        });
        if (!res.ok) return;
        const data = await res.json();
        const container = document.getElementById(containerId);
        container.innerHTML = '';
        data.forEach(m => container.appendChild(createMovieCard(m)));
      } catch (err) {
        console.error('Erro ao carregar', endpoint, err);
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      loadList('/api/favorites', 'favorites-row');
      loadList('/api/watchlist', 'watchlist-row');
    });
  </script>
</body>
</html>
